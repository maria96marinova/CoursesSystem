@model SearchFormModel



<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Welcome to our course system.</p>
    </div>
</div>

<form method="get" asp-action="Search">
    <div class="row">
        <div class="col-md-6">
            <input asp-for="SearchText" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="SearchInCourses"></label>
            <input asp-for="SearchInCourses" />
        </div>

        <div class="col-md-2">
            <label asp-for="SearchInUsers"></label>
            <input asp-for="SearchInUsers" />
        </div>

        <input type="submit" class="btn btn-default" />
    </div>

</form>

