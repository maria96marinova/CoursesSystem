@model CourseFormModel

@{
    ViewData["Title"] = "Create Course";
}

<h2>@ViewData["Title"]</h2>


<form method="post">

    <div class="row">
        <div class="form-group col-lg-2">
            <span asp-validation-for="Tilte" class="alert-danger"></span>
            <label asp-for="Tilte"></label>
            <input asp-for="Tilte" class="form-control col-xs-2" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-lg-2">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="alert-danger"></span>
            <textarea asp-for="Description" rows="10" cols="10"></textarea>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-lg-4">
            <span asp-validation-for="StartDate" class="alert-danger"></span>
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-lg-4">
            <span asp-validation-for="EndDate" class="alert-danger"></span>
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-lg-4">
            <span asp-validation-for="Credits" class="alert-danger"></span>
            <label asp-for="Credits"></label>
            <input asp-for="Credits" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <select asp-items="Model.Trainers" asp-for="TrainerId"></select>
        <input type="submit" class="btn btn-success" />
    </div>


</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

