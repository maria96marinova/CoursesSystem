@model SearchViewModel
@{
    ViewData["Title"] = $"Search results for {Model.SearchText}";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @Html.Partial("_CoursesPartial")
</div>



@if (Model.SearchInCourses)
{
    @if (Model.Courses.Any())
    {
        <ul>

            @foreach (var course in Model.Courses)
            {
                <li>
                    <a href="/course/details?courseId=@course.Id"> @course.Title </a> - @course.StartDate
                </li>
            }




        </ul>
    }


    else
    {
        <h3>No results in courses</h3>

    }

}




@if (Model.SearchInUsers)
{
    @if (Model.Users.Any())
    {
        <ul>

            @foreach (var user in Model.Users)
            {
                <li>
                    @user.Username- @user.Courses

                </li>
            }


        </ul>
    }

    else
    {
        <h3> No results in users </h3>


    }

}





